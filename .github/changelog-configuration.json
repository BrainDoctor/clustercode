{
  "pr_template": "- ${{TITLE}} (PR #${{NUMBER}})",
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": [
        "enhancement",
        "feature"
      ]
    },
    {
      "title": "## 🛠️ Minor Changes",
      "labels": [
        "change"
      ]
    },
    {
      "title": "## 🔎 Breaking Changes",
      "labels": [
        "breaking"
      ]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": [
        "bug",
        "fix"
      ]
    },
    {
      "title": "## 📄 Documentation",
      "labels": [
        "documentation"
      ]
    },
    {
      "title": "## 🔗 Dependency Updates",
      "labels": [
        "dependency"
      ]
    }
  ],
  "ignore_labels": [
    "ignore"
  ],
  "template": "${{CATEGORIZED_COUNT}} changes since ${{FROM_TAG}}\n\n${{CHANGELOG}}"
}
